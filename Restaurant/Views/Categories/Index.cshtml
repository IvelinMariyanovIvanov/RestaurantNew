@model IEnumerable<Restaurant.Domain.Category>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@Html.Partial("_CreateButtonPartial")

@if (Model.Count() == 0)
{
  <p>
      There is no Catecories
  </p>
}
else
{
    <div class="border">
        <table class="table table-striped table-hover ">
            <thead>
                <tr class="d-flex">
                    <th class="col-4">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th class="col-4">
                        @Html.DisplayNameFor(model => model.CategoryOrder)
                    </th>
                    <th class="col-4">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="d-flex">
                        <td class="col-4">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="col-4">
                            @Html.DisplayFor(modelItem => item.CategoryOrder)
                        </td>
                        <td class="col-4">
                            @Html.Partial("_TableButtonsPartial", item.Id)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}
