
@model Restaurant.Domain.ShoppingCartItem
@{
    ViewData["Title"] = "Add";
}

<h2 class="text-info">Add @Model.MenuItem.Name</h2>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="MenuItemId">

    <div class="border row border-info">
        <div class="col-8 mt-3">
            <fieldset disabled>
                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Name" class="text-info"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Description" class="text-info"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.Price" class="text-info"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.CategoryId" class="text-info"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.Category.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MenuItem.SubCategoryId" class="text-info"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.SubCategory.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="container-fluid col-4">
                        <label asp-for="MenuItem.SpicyType" class="text-info @*class="form-control text-info border-primary*@"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MenuItem.SpicyType" class="form-control" @*class="form-control text-info border-info" *@ />
                    </div>
                </div>
            </fieldset>

            <div class="form-group row">
                <div class=" col-4">
                    <label asp-for="Count" class="text-info text-center"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-outline-info form-control">Back</a>
                </div>
                <div class="col-8">
                    <input type="submit" value="Add to Cart" class="btn btn-outline-primary form-control" />
                </div>
            </div>

        </div>
        <div class="col-1 mt-3">

        </div>
        <div class="col-3 mt-3">
            <img src="@Model.MenuItem.Image" height="200px" width="200px" @*style="border-radius:5px; border:1px solid #bbb9b9" *@ class="container-fluid" />
        </div>
    </div>

</form>

