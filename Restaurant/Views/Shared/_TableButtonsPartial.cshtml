@model int


<div class="text-center">
    <a  asp-action="Edit" asp-route-id="@Model" class="btn btn-primary mr-2">
        <i class="fas fa-edit"></i>
    </a>

    @*href="@Url.Action("Details/"+Model)" class="btn btn-success"*@
    <a  asp-action="Details" asp-route-id="@Model" class="btn btn-success mr-2">
        <i class="fas fa-list-alt"></i>
    </a>

    <a asp-action="Delete" asp-route-id="@Model" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i>
    </a>
</div>