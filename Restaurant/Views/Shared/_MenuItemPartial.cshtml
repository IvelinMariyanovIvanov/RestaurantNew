<div class="border border-info rounded col-12 column" style="margin-top:10px; margin-bottom:10px; padding:10px;">
    <div class="row ml-1">
        <div class="col-9">
            <div class="row">
                <div class="col-10">
                   
                    <h3 class="text-info">
                        @Model.Name
                    </h3>
                    @*<br />*@

                    <label class="badge badge-primary">
                        @Model.Category.Name
                    </label>
                    <label class="badge badge-success">
                        @Model.SubCategory.Name
                    </label>
                    @if (Model.SpicyType.ToString() == "NA")
                    {
                        <label class="badge badge-info">
                            @Model.SpicyType
                        </label>
                    }
                    @if (Model.SpicyType.ToString() == "Spicy")
                    {
                        <label class="badge badge-warning">
                            @Model.SpicyType
                        </label>
                    }
                    @if (Model.SpicyType.ToString() == "VerySpicy")
                    {
                        <label class="badge badge-danger">
                            @Model.SpicyType
                        </label>
                    }
                </div>

                <div class="col-2 text-right text-danger">
                    <h4>
                        $@Model.Price
                    </h4>
                </div>
            </div>

            <div class="row col-9">
                <p>
                    @Model.Description
                </p>
                <br />
            </div>

            <div class="row col-12" style="position:absolute; bottom: 0px;">
                <div @*class="ml-3"*@>
                    <a asp-action="Add" class="btn btn-outline-info" asp-route-id="@Model.Id">Add</a>
                </div>
            </div>
        </div>

        <div class="col-3 text-center">
            <img src="@Model.Image" width="60%" style="border-radius:5px; border:1px solid #bbb9b9b; " />

        </div>
    </div>
</div>



