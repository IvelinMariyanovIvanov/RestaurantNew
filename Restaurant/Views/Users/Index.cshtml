@model IEnumerable<Restaurant.Models.ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<br />

<div >
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(u => u.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.Email)
            </th>
            <th>
                @Html.DisplayNameFor(u => u.PhoneNumber)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var user in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(u => user.FirstName)
            </td>
            <td>
                @Html.DisplayFor(u=>  user.LastName)
            </td>
            <td>
                @Html.DisplayFor(u => user.Email)
            </td>
            <td>
                @Html.DisplayFor(u => user.PhoneNumber)
            </td>
            <td>
                <div class="text-center">
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary mr-2">
                        <i class="fas fa-edit"></i>
                    </a>

                    <a asp-action="Lock" asp-route-id="@user.Id" class="btn btn-success mr-2">
                        <i class="fas fa-list-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </table>
</div>